<%- if items.respond_to?(:total_pages) -%>
  <%= will_paginate(
    items,
    :previous_label => '&laquo; ' + t('pagination.previous_page', :scope => :alchemy),
    :next_label => t('pagination.next_page', :scope => :alchemy) + ' &raquo;',
    :renderer => 'Alchemy::RemotePaginationLinkRenderer',
    :remote => true
  ) %>
<%- end -%>
