<div class="new_alchemy_element">
<%- if @elements.blank? -%>
	<p class="with_padding"><%= _('no_more_elements_to_add') %></p>
<%- else -%>
	<%= form_for [:admin, @element], :remote => true, :class => "add_element_content" do |form| %>
		<div id="errors" style="display: none"></div>
		<table>
			<tr>
				<td class="label">
					<%= form.label :name, _("element_of_type") %>
				</td>
				<td class="select">
					<%= form.select(
						'name',
						@page.can_have_cells? ? grouped_elements_for_select(@elements) : elements_for_select(@elements),
						{:prompt => _('select_element')},
						{:class => 'long'}
					) -%>
				</td>
			</tr>
			<tr>
				<td colspan="2" class="submit">
					<%= form.hidden_field 'page_id' %>
					<%= form.button _('add'), :class => 'button' %>
				</td>
			</tr>
		</table>
	<% end %>
<%- end -%>
</div>
