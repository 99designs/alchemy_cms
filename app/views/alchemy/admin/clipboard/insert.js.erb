(function($) {
  
<%- if params[:remove] -%>
  $("#<%= @item.class.to_s.downcase -%>_<%= @item.id -%>").remove();
  <%- if @item.class.to_s == 'Element' -%>
  $('#element_area').sortable('refresh');
  <%- end -%>
  Alchemy.growl('<%= t("item %{name} moved to clipboard", :scope => :alchemy) % {:name => @item.class.to_s == "Element" ? @item.display_name_with_preview_text : @item.name} -%>');
<%- else -%>
  Alchemy.growl('<%= t("item %{name} copied to clipboard", :scope => :alchemy) % {:name => @item.class.to_s == "Element" ? @item.display_name_with_preview_text : @item.name} -%>')
<%- end -%>
  $('#clipboard_button .icon.clipboard').addClass('full');
  
})(jQuery);
