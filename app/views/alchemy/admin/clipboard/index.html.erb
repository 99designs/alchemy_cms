<div class="with_padding">
	<%- if @clipboard_items.blank? -%>
	<p><%= t('No items in your clipboard', :scope => :alchemy) %></p>
	<%- else -%>
	<div id="clipboard_items">
		<ul>
			<%- @clipboard_items.each do |item| -%>
			<li id="clipboard_item_<%= item.id %>">
				<%= item.class.to_s == 'Element' ? item.display_name_with_preview_text(60) : item.name %>
				<span class="float_right"><%= link_to(render_icon('delete-small'), remove_admin_clipboard_path(:remarkable_type => item.class.name.demodulize.underscore, :remarkable_id => item.id), :remote => true, :method => :delete, :title => t('Remove item from clipboard', :scope => :alchemy)) %></span>
			</li>
			<%- end -%>
		</ul>
		<p>
			<%= link_to_confirmation_window(t('clear clipboard', :scope => :alchemy), t('Do you really want to clear the clipboard?', :scope => :alchemy), clear_admin_clipboard_path, :class => 'button') %>
		</p>
	</div>
	<%- end -%>
</div>
