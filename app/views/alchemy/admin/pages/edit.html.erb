<%- content_for(:subnav_additions) do -%>
	<%- @locked_pages.each do |page| -%>
	<%- if @page == page -%>
	<%= render :partial => 'page_status' %>
	<%- else -%>
	<div class="subnavi_tab wide" id="locked_page_<%= page.id %>">
		<%= link_to edit_admin_page_path(page) do %>
		<span class="page_name" title="<%= page.name %>">
			<%= truncate page.name, :length => 15 %>
		</span>
		<% end %>
		<%= form_tag(unlock_admin_page_path(page), :remote => true) do %>
			<button class="icon_button small" title="<%= t('explain_unlocking', :scope => :alchemy) %>">
				<%= render_icon('close small') %>
			</button>
		<% end %>
	</div>
	<%- end -%>
	<%- end -%>
<%- end -%>
<%- content_for(:toolbar) do -%>
<div id="toolbar_buttons">
	<div class="button_with_label">
		<%= form_tag(
			unlock_admin_page_path(
				@page,
				:redirect_to => @layoutpage ? admin_layoutpages_path : admin_pages_path
			),
			:onsubmit => "return Alchemy.checkPageDirtyness(this, {title: '#{ t('Warning!', :scope => :alchemy)) }', message: '#{ t('You have unsaved elements on this page. Do you really want to leave this page?', :scope => :alchemy) }', okLabel: '#{ t('Yes', :scope => :alchemy) }', cancelLabel: '#{ t('No', :scope => :alchemy) }'});"
		) do %>
			<button class="icon_button" title="<%= t('explain_unlocking', :scope => :alchemy) %>">
				<%= render_icon('close') %>
			</button>
			<label><%= t("unlock_page", :scope => :alchemy) %></label>
		<% end %>
	</div>
	<%- unless @page.layoutpage? -%>
	<div class="button_with_label">
		<%= form_tag(
			visit_admin_page_path(@page),
			:onsubmit => "return Alchemy.checkPageDirtyness(this, {title: '#{ t('Warning!', :scope => :alchemy)) }', message: '#{ t('You have unsaved elements on this page. Do you really want to leave this page?', :scope => :alchemy) }', okLabel: '#{ t('Yes', :scope => :alchemy) }', cancelLabel: '#{ t('No', :scope => :alchemy) }'};"
		) do %>
			<button class="icon_button" title="<%= t('Visit page', :scope => :alchemy) %>">
				<%= render_icon('visit_page') %>
			</button>
			<label><%= t("Visit page", :scope => :alchemy) %></label>
		<% end %>
	</div>
	<%- end -%>
	<div class="button_with_label">
		<%= link_to_overlay_window(
			render_icon('settings'),
			configure_admin_page_path(@page),
			{
				:title => t('edit_page_properties', :scope => :alchemy),
				:size => @page.layoutpage? ? '340x150' : '410x620'
			},
			:class => 'icon_button',
			:title => t('edit_page_properties', :scope => :alchemy)
		) -%>
		<label><%= t('page_properties', :scope => :alchemy) %></label>
	</div>
	<%- if configuration(:cache_pages) && !@page.layoutpage? -%>
	<div class="button_with_label">
		<%= form_tag(
			publish_admin_page_path(@page),
			:onsubmit => "return Alchemy.checkPageDirtyness(this, {title: '#{ t('Warning!', :scope => :alchemy)) }', message: '#{ t('You have unsaved elements on this page. Do you really want to clear the page cache?', :scope => :alchemy) }', okLabel: '#{ t('Yes', :scope => :alchemy) }', cancelLabel: '#{ t('No', :scope => :alchemy) }'};"
		) do -%>
			<button class="icon_button" title="<%= t('explain_publishing', :scope => :alchemy) %>">
				<%= render_icon('publish') %>
			</button>
			<label><%= t("Publish page", :scope => :alchemy) %></label>
		<% end -%>
	</div>
	<%- end -%>
</div>
<div id="toolbar_buttons_right">
	<div class="button_with_label" id="show_preview_window">
		<%= link_to_function(
			render_icon('preview_window'),
			"openPreviewWindow()",
			{
				:title => t('Show Preview Window', :scope => :alchemy),
				:class => 'icon_button'
			}
		) %>
		<label><%= t('Show Preview Window', :scope => :alchemy) %></label>
	</div>
	<div class="button_with_label" id="show_element_window">
		<%= link_to_function(
			render_icon('element_window'),
			"openElementsWindow()",
			{
				:title => t('Show Elements Window', :scope => :alchemy),
				:class => 'icon_button'
			}
		) %>
		<label><%= t('Show Elements Window', :scope => :alchemy) %></label>
	</div>
</div>
<%- end -%>
<%- content_for :javascripts do -%>
<%= tinymce_javascript_tags %>
<script type="text/javascript" charset="utf-8">
	
	function openPreviewWindow() {
		Alchemy.openPreviewWindow('<%= admin_page_url(@page) %>', '<%= t("Page Preview", :scope => :alchemy) -%>');
	}
	
	function openElementsWindow() {
		Alchemy.openElementsWindow('<%= admin_elements_path(:page_id => @page.id) -%>', {
			texts: {
				title: '<%= t("Elements", :scope => :alchemy) -%>',
				dirtyTitle: '<%= t("Warning!", :scope => :alchemy) -%>',
				dirtyMessage: '<%= t("You have unsaved elements. Do you really want to close the elements window?", :scope => :alchemy) -%>',
				okLabel: '<%= t("Yes", :scope => :alchemy) -%>',
				cancelLabel: '<%= t("No", :scope => :alchemy) -%>'
			},
			toolbarButtons: [
				{
					title: '<%= t("New Element", :scope => :alchemy) -%>',
					label: '<%= t("New Element", :scope => :alchemy) -%>',
					iconClass: 'new_element',
					onClick: function() {
						Alchemy.openWindow(
							'<%= new_admin_element_path(:page_id => @page.id) -%>',
							'<%= t("New Element", :scope => :alchemy) -%>',
							'320',
							'120',
							false,
							true,
							true
						);
					}
				},
				{
					title: '<%= t("Clipboard", :scope => :alchemy) -%>',
					label: '<%= t("Show clipboard", :scope => :alchemy) -%>',
					iconClass: 'clipboard<%= clipboard_empty?("elements") ? "" : " full" -%>',
					buttonId: 'clipboard_button',
					onClick: function() {
						Alchemy.openWindow(
							'<%= admin_clipboard_path(:remarkable_type => "elements") -%>',
							'<%= t("Clipboard", :scope => :alchemy) -%>',
							'380',
							'270',
							false,
							true,
							true
						);
					}
				},
				{
					title: '<%= t("Show trash", :scope => :alchemy) -%>',
					label: '<%= t("Show trash", :scope => :alchemy) -%>',
					iconClass: 'trash<%= trash_empty?("elements") ? "" : " full" -%>',
					buttonId: 'element_trash_button',
					onClick: function() {
						Alchemy.openTrashWindow(<%= @page.id %>, '<%= t("Trash"), :scope => :alchemy -%>');
					}
				}
			]
		}, function() {
			Alchemy.SortableElements(<%= @page.id %>, '<%= form_authenticity_token %>');
			Alchemy.ElementEditorSelector.init();
			Alchemy.SelectBox('.element_editor select');
			Alchemy.Tinymce.init(function() {
				Alchemy.ElementDirtyObserver('#element_area');
			});
			jQuery('#cells').tabs();
			jQuery('#cells').tabs('paging', { follow: true, followOnSelect: true } );
		});
	}
	
	jQuery(document).ready(function() {
		openElementsWindow();
		openPreviewWindow();
	});
	
	Alchemy.PageLeaveObserver({
		title: '<%= t("Warning!", :scope => :alchemy) -%>',
		message: '<%=  t("You have unsaved elements on this page. Do you really want to leave this page?", :scope => :alchemy) -%>',
		okLabel: '<%= t("Yes", :scope => :alchemy) -%>',
		cancelLabel: '<%= t("No", :scope => :alchemy) -%>'
	});
	
</script>
<%- end -%>
