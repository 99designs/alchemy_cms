<span class="page_status_and_name" id="page_<%= @page.id %>_status">
    <span class="page_name"><%= @page.name %></span>
    <%- if multi_language? && !@layoutpage -%>
    <span class="flag <%= @page.language_code %>"></span>
    <%- end -%>
    <span class="page_status <%= @page.public ? 'public' : 'not_public' %>" title="<%= @page.public ? t('Page public', :scope => :alchemy) : t('Page not public', :scope => :alchemy) %>"></span>
    <span class="page_status <%= @page.visible ? 'visible' : 'not_visible' %>" title="<%= @page.visible ? t('Page visible', :scope => :alchemy) : t('Page not visible', :scope => :alchemy) %>"></span>
    <span class="page_status <%= @page.restricted ? 'restricted' : 'not_restricted' %>" title="<%= @page.restricted ? t('Page restricted', :scope => :alchemy) : t('Page not restricted', :scope => :alchemy) %>"></span>
</span>
