<%= alchemy_form_for([:admin, @page], :remote => true) do |f| %>
  <%= f.input :page_layout, collection: @page_layouts, label: _t(:page_type), include_blank: false, input_html: {class: 'alchemy_selectbox'} %>
  <% unless @page.layoutpage %>
    <div class="input">
      <label><%= _t(:page_status) %></label>
      <div class="checkbox_group">
        <%= f.check_box :public %>
        <%= f.label :public %><br/>
        <%= f.check_box :visible %>
        <%= f.label :visible %><br/>
        <%= f.check_box :restricted %>
        <%= f.label :restricted %>
        <% if configuration(:sitemap)[:show_flag] %><br/>
          <%= f.check_box :sitemap %>
          <%= f.label :sitemap %>
        <% end %>
      </div>
    </div>
    <h2><%= _t(:names) %></h2>
  <% end %>
  <%= f.input :name, autofocus: true %>
  <% unless @page.layoutpage %>
    <%= f.input :urlname, as: 'string', input_html: {value: @page.slug} %>
    <%= f.input :title %>
    <h2><%= _t(:meta_data) %></h2>
    <div class="input">
      <label><%= _t(:search_engines) %></label>
      <div class="checkbox_group">
        <%= f.check_box "robot_index" %>
        <%= f.label "robot_index" %><br/>
        <%= f.check_box "robot_follow" %>
        <%= f.label "robot_follow" %><br/>
      </div>
    </div>
    <%= f.input :meta_description, as: 'text' %>
    <%= f.input :meta_keywords, as: 'text', hint: _t('pages.update.comma_seperated') %>
  <% end %>
  <% if @page.taggable? %>
    <div class="input string">
      <%= f.label :tag_list %>
      <%= render 'alchemy/admin/partials/autocomplete_tag_list', :f => f, :object => @page %>
    </div>
  <% end %>
  <%= f.submit, _t(:save) %>
<% end %>
