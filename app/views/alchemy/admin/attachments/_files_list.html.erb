<%- if @attachments.blank? && params[:query].nil? -%>
	<p class="padding_left_right" id="no_files_notice">
		<%= t("no_files_in_archive", :scope => :alchemy) %>
	</p>
<%- elsif @attachments.blank? -%>
	<p class="padding_left_right">
		<%= t("no_search_results", :scope => :alchemy) %>
	</p>
<%- end -%>
<table id="all_files" class="list">
	<%- unless @attachments.blank? -%>
	<tr>
		<th class="icon"></th>
		<th class="name"><%= t('Attachment|Name', :scope => :alchemy) %></th>
		<th class="file_name"><%= t('Attachment|Filename', :scope => :alchemy) %></th>
		<th class="file_type"><%= t('Attachment|Content type', :scope => :alchemy) %></th>
		<th class="file_size"><%= t('Attachment|Size', :scope => :alchemy) %></th>
		<th class="date"><%= t('Attachment|Created at', :scope => :alchemy) %></th>
		<th class="tools"></th>
	</tr>
	<%- end -%>
	<%= render(:partial => @attachments) %>
</table>

<%= render 'alchemy/admin/partials/pagination_links', :items => @attachments %>
