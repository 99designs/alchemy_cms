<% if @attachments.empty? %>
  <div class="info">
    <%= render_icon('info') %>
    <%= _t(:no_files_in_archive) %>
  </div>
<% else %>
  <ul class="with_padding">
    <%= render :partial => 'file_to_assign', :collection => @attachments %>
  </ul>
  <%= paginate @attachments, :remote => true %>
<% end %>
