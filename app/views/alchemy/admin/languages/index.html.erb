<%- content_for(:toolbar) do -%>
<div id="toolbar_buttons">
	<%- permitted_to?(:new, :alchemy_admin_languages) do -%>
	<%= toolbar_button(
		:icon => 'create',
		:label => _('create_language'),
		:url => new_admin_language_path,
		:title => _('create_language'),
		:overlay => true,
		:overlay_options => {
			:size => "420x280",
			:title => _('create_language'),
			:overflow => true
		}
	) %>
	<%- end -%>
</div>
<%= render :partial => 'alchemy/admin/partials/search_form' %>
<%- end -%>

<%= render 'alchemy/admin/resources/table', :resource_partial => 'language' %>
