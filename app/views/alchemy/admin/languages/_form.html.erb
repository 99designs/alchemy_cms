<%= remote_form_for [:alchemy, :admin, @language] do |f| %>
	<div id="errors" style="display: none"></div>
	<table>
		<tr>
			<td class="label"><%= f.label 'name', Alchemy::Language.human_attribute_name(:name) %>:</td>
			<td><%= f.text_field 'name', :class => 'thin_border long' -%></td>
		</tr>
		<tr>
			<td class="label"><%= f.label 'code', Alchemy::Language.human_attribute_name(:code) %>: </td>
			<td><%= f.text_field 'code', :class => 'thin_border long' -%></td>
		</tr>
		<tr>
			<td class="label"><%= f.label 'frontpage_name', Alchemy::Language.human_attribute_name(:frontpage_name) %>: </td>
			<td><%= f.text_field 'frontpage_name', :class => 'thin_border long' -%></td>
		</tr>
		<tr>
			<td class="label"><%= f.label 'page_layout', Alchemy::Language.human_attribute_name(:page_layout) %>: </td>
			<td><%= f.text_field 'page_layout', :class => 'thin_border long' -%></td>
		</tr>
		<tr>
			<td class="label"><%= f.label 'public', Alchemy::Language.human_attribute_name(:public) %>: </td>
			<td><%= f.check_box 'public' -%></td>
		</tr>		
		<tr>
			<td class="label"><%= f.label 'default', Alchemy::Language.human_attribute_name(:default) %>: </td>
			<td><%= f.check_box 'default' -%></td>
		</tr>
		<tr>
			<td class="label" colspan="2" align="right">
				<%= f.submit _('save'), :class => 'button' %>
			</td>
		</tr>
	</table>
<% end %>
