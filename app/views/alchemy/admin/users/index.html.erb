<%- content_for(:toolbar) do -%>
<div id="toolbar_buttons">
<%- permitted_to?(:new, :alchemy_admin_users) do -%>
	<%= toolbar_button(
		:icon => 'user_add',
		:label => _('create_user'),
		:url => new_admin_user_path,
		:title => _('create_user'),
		:overlay => true,
		:overlay_options => {
			:title => _('create_user'),
			:size => "384x400",
			:overflow => true
		}
	) %>
<%- end -%>
</div>
<%= render :partial => 'alchemy/admin/partials/search_form' %>
<%- end -%>

<%- if @users.any? -%>
<table class="list" id="user_list">
	<tr>
		<th class="icon"></th>
		<th class="login_status"></th>
		<th class="login"><%= _('User|Login') %></th>
		<th class="name"><%= _('User|Name') %></th>
		<th class="email"><%= _('User|Email') %></th>
		<th class="role"><%= _('User|Role') %></th>
		<th class="tools"></th>
	</tr>
	<%= render @users %>
</table>
<%= render 'alchemy/admin/partials/pagination_links', :items => @users %>
<%- elsif params[:query] -%>
<p><%= _('No users found.') %></p>
<%- end -%>
