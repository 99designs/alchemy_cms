<%- if page.redirects_to_external? -%>
<%= link_to(
	h(page.name),
	page.urlname,
	:title => (options[:show_title] == true ? page.title : nil),
	:target => '_blank'
) -%>
<%- else -%>
<%- link_path = @preview_mode ? 'javascript:void(0)' : show_page_path(:urlname => page.urlname, :lang => multi_language? ? page.language.code : nil) -%>
<%= link_to(
	h(page.name),
	link_path,
	{
		:class => (page_active?(page) ? 'active' : nil),
		:title => (options[:show_title] ? page.title : nil),
		:lang => page.language_code,
		'data-page-id' => page.id
	}
) -%>
<%- end -%>