if session[:clipboard][:method] == "move"
  page.remove "element_#{@element.id}"
  page << "jQuery('#element_area').sortable('refresh');"
  Alchemy::Notice.show(page, _("element_%{name}_moved_to_clipboard") % {:name => @element.display_name})
else
  Alchemy::Notice.show(page, _("element_%{name}_copied_to_clipboard") % {:name => @element.display_name})
end
