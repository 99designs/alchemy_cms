<li id="page_<%= page.id %>" class="page_level_<%= page.level %>">
	<div class="sitemap_page">
		<div class="sitemap_left_images">
			<%= sitemapFolderLink(page) unless page.children.blank? || @sorting %>
			<span class="site_status <%= @sorting ? 'handle' : nil %> tooltip html_tooltip_<%= page.id %><%= page.locked ? ' locked' : '' %>" ></span>
            <div id="tooltip_<%= page.id %>" style="display: none;">
            	<h1><%= _("page_type") %>: <%= page.layout_display_name %></h1>
            	<p>
            		<%= page.humanized_status %>
            	</p>
            	<p>
            		<strong><%= _("created_at") %>:</strong><br />
            		<%= l(page.created_at) %> von <%= page.creator %>
            	</p>
            	<p>
            		<strong><%= _("updated_at") %>:</strong><br />
            		<%= l(page.updated_at) %> durch <%= page.updater %>
            	</p>
            	<%- if page.locked? -%>
            	<p>
            		<%= _("currently_edited_by") %>: <span style="font-weight: bold;"><%= page.current_editor %></span>
            	</p>
            	<%- end -%>
            </div>
		</div>
		<div class="sitemap_right_tools">
			<%- if !page.layoutpage? -%>
				<%- permitted_to?(:configure, :admin_pages) do -%>
				<%= link_to_overlay_window(
					"<span class='icon configure_page'></span>",
					configure_admin_page_path(page),
					{
						:title => _('edit_page_properties'),
						:size => page.redirects_to_external? ? '370x190' : '380x490'
					},
					:class => 'icon_button',
					:title => _('edit_page_properties')
				) -%>
				<%- end -%>
			<%- end -%>
			<%- permitted_to?([:new, :destroy], :admin_pages) do -%>
			<span class="sitemap_sitetools">
				<%- permitted_to?(:destroy, :admin_pages) do -%>
				<%= link_to_confirmation_window(
						"<span class='icon delete_page'></span>",
						_("confirm_to_delete_page"),
						url_for(
							:controller => 'pages',
							:action => 'destroy',
							:id => page.id
						),
						{
							:class => "icon_button",
							:title => _("delete_page")
						}
					) -%>
				<%- end -%>
				<%- permitted_to?(:new, :admin_pages) do -%>
				<%= link_to_overlay_window(
					"<span class='icon add_page'></span>",
					new_admin_page_path(:parent_id => page.id),
					{
						:title => _('create_page'),
						:size => '275x90',
						:overflow => true
					},
					:class => 'icon_button',
					:title => _('create_page')
				) -%>
				<%- end -%>
			</span>
			<%- end -%>
		</div>
		<div class="page_infos">
			<span class="page_status <%= page.public ? 'public' : 'not_public' %>" title="<%= page.public ? _('Page public') : _('Page not public') %>"></span>
            <span class="page_status <%= page.visible ? 'visible' : 'not_visible' %>" title="<%= page.visible ? _('Page visible') : _('Page not visible') %>"></span>
            <span class="page_status <%= page.restricted ? 'restricted' : 'not_restricted' %>" title="<%= page.restricted ? _('Page restricted') : _('Page not restricted') %>"></span>
		</div>
		<div class="sitemap_sitename">
		    <%- if page.redirects_to_external? -%>
		    <span class="sitemap_pagename_link <%= cycle('even', 'odd') %>"><%= page.name %></span>
		    <%- else -%>
			<%= link_to(
				page.name + " #{page.id}",
				edit_admin_page_path(page),
				:title => _("edit_page"),
				:class => "sitemap_pagename_link #{cycle('even', 'odd')}"
			) -%>
			<%- end -%>
		</div>
	</div>
	<%- if @sorting || (!page.folded?(current_user) && !page.children.empty?) -%>
	<ul id="page_<%= page.id %>_children">
		<%= render :partial => 'page', :collection => page.children %>
	</ul>
	<%- end -%>
</li>
