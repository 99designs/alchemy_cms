<div id="archive_all">
	<h1><%= _("language_does_not_exist") %>!</h1>
	<%- lang = Language.find(session[:language_id]) -%>
	<%- languages = Language.all_for_created_language_trees -%>
	<%- if lang -%>
	<%- if languages.size >= 1 -%>
	<p><%= _("want_to_make_copy_of_existing_language") %></p>
	<%- form_tag("/admin/pages/copy_language", :onsubmit => 'pleaseWaitOverlay();') do -%>
		<table>
		    <tr>
		        <td class="input">
		            <%= alchemy_selectbox_tag("languages[old_lang_id]", languages.map{ |l| [l.name, l.id] }, :class => "medium_long", :style => "float:left") %>
		            <%= hidden_field_tag("languages[new_lang_id]", lang.id) %>
		        </td>
		        <td class="">
					<%= hidden_field_tag("layoutpage", params[:action] == "layoutpages") if params[:action] == "layoutpages" %>
		            &nbsp;<%= submit_tag _("copy"), :class => 'button' %>
		        </td>
		    </tr>
		</table>
	<%- end -%>
	<%- if params[:action] == "index" -%>
	<p>
	    <br />
	    <%= _("want_to_create_new_language") %>
	</p>
	<% remote_form_for([:admin, Page.new]) do |form| %>
		<%= form.hidden_field :name, :value => lang.frontpage_name %>
		<%= form.hidden_field :language_id, :value => lang.id %>
		<%= form.hidden_field :language_code, :value => lang.code %>
		<%= form.hidden_field :page_layout, :value => lang.page_layout %>
		<%= form.hidden_field :language_root, :value => true %>
		<%= form.submit(_("%{language}_as_new_language") % {:language => lang.name}, :class => 'button', :onclick => 'pleaseWaitOverlay();') %>
	<% end %>
	<%- end -%>
	<%- else -%>
	<p>Diese Sprache existiert noch nicht. Bitte legen Sie diese Sprache erst in den Sprachen an.</p>
	<%- end -%>
	<%- end -%>
</div>
