<div class="content_editor content_rtf_editor" id="<%= "element_#{content.element.id}_content_#{content.id}" %>">
	<%- if content.description.nil? -%>
	<p class="warning">
		<%= _('Warning: Content "%{contentname}" is missing its description.') % {:contentname => content.name} %>
	</p>
	<%- end -%>
    <label><%= render_content_name(content) %></label>
    <div class="essence_richtext_loader" style="display: none">
        <%= image_tag('alchemy/ajax_loader.gif') %>
    </div>
    <%= tinymce_tag("contents[content_#{content.id}]", content.essence.body) %>
</div>
