<tr class="<%= cycle('odd', 'even') %>">
	<td class="icon">
		<%= content_tag('span', '', :class => "icon #{attachement.icon_css_class}") %>
	</td>
	<td class="name">
		<%- if permitted_to?(:show, :attachements) -%>
		<%= link_to(
			attachement.name,
			attachement_path(attachement),
			:popup => true,
			:title => _('View File')
		) %>
		<%- else -%>
		<%= attachement.name %>
		<%- end -%>
	</td>
	<td class="file_name"><%= attachement.filename %></td>
	<td class="file_type"><%= mime_to_human(attachement.content_type) %></td>
	<td class="file_size"><%= number_to_human_size(attachement.size) %></td>
	<td class="date"><%= l(attachement.created_at) %></td>
	<td class="tools long">
		<%- permitted_to?(:download, :attachements) do -%>
		<%= link_to(
			"",
			attachement_path(attachement, :download => true),
			:title => (_("download_file_'%{filename}'") % {:filename => attachement.filename}),
			:class => "icon file_download"
		) %>
		<%- end -%>
		<%- permitted_to?(:destroy, :attachements) do -%>
		<%= delete_with_confirmation_link(
			"",
			_("confirm_to_delete_file"),
			attachement_path(
				:id => attachement,
				:query => params[:query],
				:page => params[:page],
				:per_page => params[:per_page]
			),
			{
				:class => 'icon file_delete',
				:title => _('delete_file')
			}
		) -%>
		<%- end -%>
		<%- permitted_to?(:edit, :attachements) do -%>
		<%= link_to_wa_window("",
			edit_attachement_path(attachement, :query => params[:query], :page => params[:page]),
			{
				:title => _('rename_file'),
				:size => '380x45'
			},
			:class => 'icon file_edit',
			:title => _('rename_file')
		) -%>
		<%- end -%>
	</td>
</tr>
