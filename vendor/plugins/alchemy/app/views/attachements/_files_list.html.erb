<%- if @files.blank? && params[:query].nil? -%>
	<p class="padding_left_right" id="no_files_notice">
		<%= _("no_files_in_archive") %>
	</p>
<%- elsif @files.blank? -%>
	<p class="padding_left_right">
		<%= _("no_search_results") %>
	</p>
<%- end -%>
<%= render :partial => 'partials/pagination_links', :locals => {:items => @files} %>
<table id="all_files" class="list">
	<%- unless @files.blank? -%>
	<tr>
		<th class="icon"></th>
		<th class="name"><%= File.human_attribute_name('name') %></th>
		<th class="file_name"><%= File.human_attribute_name('filename') %></th>
		<th class="file_type"><%= File.human_attribute_name('content_type') %></th>
		<th class="file_size"><%= File.human_attribute_name('size') %></th>
		<th class="date"><%= File.human_attribute_name('created_at') %></th>
		<th class="tools"></th>
	</tr>
	<%- end -%>
	<%= render(:partial => @files) %>
</table>