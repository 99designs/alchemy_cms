<%- wa_assets_set(:archive) -%>
<div id="toolbar">
	<%- permitted_to?(:new, :attachements) do -%>
	<div id="toolbar_buttons">
		<div class="button_with_label">
			<%= link_to_overlay_window(
				content_tag('span', '', :class => 'icon upload'),
				new_attachement_path,
				{
					:title => _('upload_file'),
					:size => '355x320'
				},
				:title => _('upload_file'),
				:class => 'icon_button'
			) %><br />
			<label><%= _('upload_file') %></label>
		</div>
	</div>
	<div class="toolbar_spacer"></div>
	<%- end -%>
	<div id="toolbar_links">
		<%= render :partial => 'partials/per_page_links', :locals => {:label => _('files'), :values => ['20', '50', 'all']} %>
	</div>
	<%= render :partial => 'partials/search_form' %>
</div>

<%= render :partial => "partials/flash_notice" %>

<div id="archive_all">
	<%= render :partial => 'files_list' %>
</div>
