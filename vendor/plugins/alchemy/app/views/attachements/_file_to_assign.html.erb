<%-
  prefix = "<div class=\"wa_assign_file_file_icon\">"
  suffix = "</div><div class=\"wa_assign_file_file_name\">#{file_to_assign.filename}</div>"
-%>
<%- img_tag = "#{prefix}#{render_file_icon file_to_assign}#{suffix}" -%>
<div class="wa_assign_file_file" name="<%= file_to_assign.filename %>">
  <%= link_to_remote(
    img_tag,
      :url => {
        :controller => :essence_files,
        :action => :assign,
        :file_id => file_to_assign.id,
        :id => @content.id,
        :options => @options
      },
      :method => 'post',
      :html => {:title => file_to_assign.filename}
    ) %>
</div>
