<%- if @wa_files.blank? && params[:query].nil? -%>
	<p class="padding_left_right" id="no_files_notice">
		<%= _("no_files_in_archive") %>
	</p>
<%- elsif @wa_files.blank? -%>
	<p class="padding_left_right">
		<%= _("no_search_results") %>
	</p>
<%- end -%>
<%= render :partial => 'partials/pagination_links', :locals => {:items => @wa_files} %>
<table id="all_files" class="wa_list">
	<%- unless @wa_files.blank? -%>
	<tr>
		<th class="icon"></th>
		<th class="name"><%= WaFile.human_attribute_name('name') %></th>
		<th class="file_name"><%= WaFile.human_attribute_name('filename') %></th>
		<th class="file_type"><%= WaFile.human_attribute_name('content_type') %></th>
		<th class="file_size"><%= WaFile.human_attribute_name('size') %></th>
		<th class="date"><%= WaFile.human_attribute_name('created_at') %></th>
		<th class="tools"></th>
	</tr>
	<%- end -%>
	<%= render(:partial => @wa_files) %>
</table>