<div class="wa_add_molecule" id="add_molecule_<%= molecule_before.id rescue '' %>">
	<%= image_tag(
		"ajax_loader.gif",
		:plugin => "alchemy",
		:id => "add_molecule_#{molecule_before.id rescue ''}_spinner",
		:class => "add_molecule_spinner",
		:style => "display: none"
	) %>
	<%= link_to_remote(
		"",
		:url => new_wa_molecule_path(
			:open => !open_molecule_selector,
			:page_id => @wa_page.id,
			:molecule_before_id => molecule_before
		),
		:loading => %(
			$$('#add_molecule_#{molecule_before.id rescue ''} a.hide_molecule_selector').first().hide();
			$('add_molecule_#{molecule_before.id rescue ''}_spinner').show();
		),
		:html => {
			:class => "#{open_molecule_selector ? 'hide' : 'show'}_molecule_selector"
		}
	) -%>
	<%- if open_molecule_selector -%>
		<%= render :partial => 'wa_pages/add_molecule_form', :locals => {:molecule_before => molecule_before} %>
	<%- end -%>
</div>