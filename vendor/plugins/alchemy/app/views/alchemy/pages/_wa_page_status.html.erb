<span class="site_status tooltip html_tooltip_<%= wa_page.id %>" style="background-position: -<%= wa_page.status * 17 %>px 0;">
</span>
<div id="tooltip_<%= wa_page.id %>" style="display: none;">
	<h1>
		<%= _("page_type") %>: <%= wa_page.layout_display_name %>
	</h1>
	<p>
		<%= wa_page.humanized_status %>
	</p>
	<p>
		<strong><%= _("created_at") %>:</strong><br />
		<%= l(wa_page.created_at) %> von <%= wa_page.creator %>
	</p>
	<p>
		<strong><%= _("updated_at") %>:</strong><br />
		<%= l(wa_page.updated_at) %> durch <%= wa_page.updater %>
	</p>
	<%- if wa_page.locked? -%>
	<p>
		<%= _("currently_edited_by") %>: <span style="font-weight: bold;"><%= wa_page.current_editor %></span>
	</p>
	<%- end -%>
</div>
