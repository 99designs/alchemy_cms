<%- wa_assets_set(:sitemap) -%>

<div class="wa_legend">
	<%= render :partial => 'language_selector' if configuration(:languages).size > 1 %>
</div>

<%= render :partial => "partials/flash_notice" %>

<ul id="wa_sitemap" class="wa_list">
	<li class="legend">
		<span class="right">
			<%- permitted_to?(:move, :pages) do -%>
			<span class="page_infos">
				Infos
			</span>
			<span class="page_move">Bewegen</span>
			<%- end -%>
		</span>
		<span class="page_name">
			Name
		</span>
	</li>
	<%= render :partial => 'page', :object => @page_root %>
</ul>

<%- content_for :javascripts do -%>
<script type="text/javascript" charset="utf-8">
// <![CDATA[
	TooltipManager.init(
		"tooltip",
		"", {
			showEffect: Element.show,
			hideEffect: Element.hide,
			className: "wa_tooltip",
			delayOut: "0",
			closable: false,
			draggable: false,
			resizable: false
		}
	);
// ]]>
</script>
<%- end -%>
