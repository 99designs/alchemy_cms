<div class="overlay_tab_bar">
	<span onclick="show_overlay_tab('wa_sitemap_for_links', this);" class="wa_overlay_tab active" id="tab_for_wa_sitemap_for_links">
		<%= _('link_overlay_tab_label.internal') %>
	</span>
	<span onclick="show_overlay_tab('wa_sitemap_external_links', this);" class="wa_overlay_tab" id="tab_for_wa_sitemap_external_links">
		<%= _('link_overlay_tab_label.external') %>
	</span>
	<span onclick="show_overlay_tab('wa_file_links', this);" class="wa_overlay_tab" id="tab_for_wa_file_links">
		<%= _('link_overlay_tab_label.file') %>
	</span>
	<%- if configuration(:mailer)[:contactform_linking] -%>
	<span onclick="show_overlay_tab('contactform_links', this);" class="wa_overlay_tab" id="tab_for_contactform_links">
		<%= _('link_overlay_tab_label.contactform') %>
	</span>
	<%- end -%>
</div>
<%= render :partial => 'internal_link' %>
<%= render :partial => 'external_link' %>
<%= render :partial => 'file_link' %>
<%- if configuration(:mailer)[:contactform_linking] -%>
	<%= render :partial => 'contactform_links' %>
<%- end -%>
<%- javascript_tag do -%>
  if (wa_overlay.tiny_ed) {
    select_link_tab();
  }
<%- end -%>
