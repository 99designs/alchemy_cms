<div class="wa_file" id="wa_file_<%= atom.id %>">
	<div class="file_icon">
	<%- if atom.atom.wa_file.nil? -%>
		<%= link_to_wa_window("",
			archive_overlay_wa_files_path(
				:atom_id => atom.id,
				:only => options[:file_assign_show_only],
				:except => options[:file_assign_do_not_show],
				:options => options
			),
			{
				:title => _('assign_file'),
				:size => '520x400',
				:resizable => 'true'
			},
			:class => 'assign_file',
			:title => _('assign_file')
		) %>
	<%- else -%>
		<%= render_file_icon(atom.atom.wa_file) %>
	<%- end -%>
	</div>
	<div class="file_name">
		<%= atom.atom.wa_file.name rescue "<span style='font-style:italic'> <- " + _('assign_file_from_archive') + "</span>" %>
	</div>
	<%- unless atom.atom.wa_file.nil? -%>
	<div class="atom_file_tools">
		<%= link_to_wa_window("",
			url_for(
				:controller => 'atom_files',
				:action => 'edit',
				:id => atom
			),
			{
				:title => _('edit_file_properties'),
				:size => '365x150'
			},
			:class => 'edit_file',
			:title => _('edit_file_properties')
		) %>
		<%= link_to_wa_window("",
			archive_overlay_wa_files_path(
				:atom_id => atom.id,
				:only => options[:file_assign_show_only],
				:except => options[:file_assign_do_not_show],
				:options => options
			),
			{
				:title => _('assign_file'),
				:size => '520x400',
				:resizable => 'true'
			},
			:class => 'assign_file',
			:title => _('assign_file')
		) %>
	</div>
	<%- end -%>
</div>
