<%- unless atom.atom.wa_file.nil? -%>
<%- width = atom.atom.width.blank? ? (options[:player_size].split('x')[0] rescue 320) : atom.atom.width -%>
<%- height = atom.atom.height.blank? ? (options[:player_size].split('x')[1] rescue 240) : atom.atom.height -%>
<div id="wa_video_player_<%= atom.id %>">
  To watch this video, you need the latest <a href="http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash" target="_blank">Flash-Player</a> and active javascript in your browser.
</div>
<script type="text/javascript" charset="utf-8">
	var flashvars = {
		width: <%= width %>,
		height: <%= height %>,
		file: '<%= atom.atom.wa_file.public_filename %>',
		<%- unless options[:player_cover_image].blank? -%>
		image: '<%= "/" + options[:player_cover_image].public_file_path %>',
		<%- end -%>
		frontcolor: '<%= options[:player_frontcolor] || "0x000000" %>',
		backcolor: '<%= options[:player_backcolor] || "0xFFFFFF" %>',
		lightcolor: '<%= options[:player_lightcolor] || "0xEDEDED" %>',
		screencolor: '<%= options[:player_screencolor] || "0x000000" %>',
		shownavigation: '<%= atom.atom.show_navigation ? "true" : "false" %>',
		showeq: '<%= atom.atom.show_eq ? "true" : "false" %>',
		autorewind: "on",
		volume: 90,
		loop: "off",
		mute: "off",
		muteonly: "off"
	};
	var params = {
		menu: false,
		quality: "high",
		allowfullscreen: '<%= atom.atom.allow_fullscreen ? "true" : "false" %>'
	};
	var attributes = {};
	swfobject.embedSWF( "/mediaplayer.swf", "wa_video_player_<%= atom.id %>", <%= width %>, <%= height %>, "9", false, flashvars, params, attributes);
</script>
<%- end -%>