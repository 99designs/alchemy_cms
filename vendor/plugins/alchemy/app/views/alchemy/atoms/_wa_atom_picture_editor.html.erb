<div id="picture_<%= atom.id %>" class="<%= 'dragable_picture' if options[:dragable] %>">
	<%- if atom.atom.wa_image.nil? -%>
	<%= render :partial => "molecules/assign_picture_atom", :locals => {:atom => atom, :options => options} %>
	<%- else -%>
	<div class="picture_detail">
		<div class="picture_handle" title="<%= _('drag_to_sort') if options[:dragable] %>"></div>
		<div class="picture_atom_spinner">
			<%= image_tag("ajax_loader.gif", :plugin => "alchemy", :alt => '') %>
		</div>
		<div class="picture_image" style="display: none;">
			<%= image_tag(
				thumbnail_url(:id => atom.atom.wa_image, :size => "111x93"),
				:alt => atom.atom.wa_image.name,
				:class => 'img_paddingtop',
				:title => _("image_name") + ": #{atom.atom.wa_image.name}",
				:onload => %(
					this.up().previous().hide();
					this.up().appear({duration: 0.6});
				)
			) %>
			<%= hidden_field_tag "atoms[atom_#{atom.id}][wa_image_id]", atom.atom.wa_image.id %>
		</div>
		<div class="edit_images_bottom">
			<%= render(
				:partial => 'atoms/partials/wa_picture_tools',
				:locals => {
					:atom => atom,
					:options => options
				}
			) %>
		</div>
	</div>
	<%- end -%>
	<%= hidden_field_tag "atoms[atom_#{atom.id}][link]", atom.atom.link, :id => "atom_#{atom.id}_link" %>
	<%= hidden_field_tag "atoms[atom_#{atom.id}][link_title]", atom.atom.link_title, :id => "atom_#{atom.id}_link_title" %>
	<%= hidden_field_tag "atoms[atom_#{atom.id}][link_class_name]", atom.atom.link_class_name, :id => "atom_#{atom.id}_link_class_name" %>
	<%= hidden_field_tag "atoms[atom_#{atom.id}][open_link_in_new_window]", atom.atom.open_link_in_new_window ? '1' : '0', :id => "atom_#{atom.id}_link_target" %>
	<%= hidden_field_tag "atoms[atom_#{atom.id}][image_size]", atom.atom.image_size, :id => "atom_#{atom.id}_image_size" %>
</div>
