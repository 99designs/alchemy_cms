case @atom.atom_type
when "Atoms::Picture"
  page.insert_html(
    :before,
    "add_atom_#{@molecule.id}",
    :partial => "atom_picture_editor",
    :locals => {
      :atom => @atom,
      :options => @options
    }
  )
  if @dragable
    Alchemy::Configuration.sortable_atoms(page, @molecule)
  end
  page << "reloadPreview()"
when "WaAtomText"
  page.insert_html(
    :before,
    "add_atom_for_molecule_#{@molecule.id}",
    :partial => "atom_text_editor",
    :locals => {
      :atom => @atom,
      :options => {:as => 'text_field'}.merge(@options.nil? ? {} : @options)
    }
  )
  page << "reloadPreview(); if(typeof(wa_overlay)!='undefined') { wa_overlay.close(); }"
when "WaAtomRtf"
  page.insert_html(
    :before,
    "add_atom_for_molecule_#{@molecule.id}",
    :partial => "atom_rtf_editor",
    :locals => {
      :atom => @atom,
      :options => (@options.nil? ? {} : @options)
    }
  )
  page.call 'TinymceHammer.init'
  page << "wa_overlay.close()"
else
  page.insert_html(
    :before,
    "add_atom_for_molecule_#{@molecule.id}",
    :partial => "#{@atom.atom_type.underscore}_editor",
    :locals => {
      :atom => @atom,
      :options => (@options.nil? ? {} : @options)
    }
  )
  page << "wa_overlay.close()"
end
Alchemy::Notice.show_via_ajax(page, _("Successfully added %{atom}") % {:atom => @atom.name})
