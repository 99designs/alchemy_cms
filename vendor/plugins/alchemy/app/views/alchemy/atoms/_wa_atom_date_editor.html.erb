<%- @date = wa_atom.atom -%>
<div class="wa_atom_editor">
	<label><%= t("atom_names.#{wa_atom.name}") %></label>
	<%= datetime_select(
		"date",
		:date,
		:default => Date.today,
		:discard_minute => (options[:show_time] ? false : true),
		:discard_hour => (options[:show_time] ? false : true)
	) %>
</div>
