<div class="atom_editor" id="<%= atom_dom_id(atom) %>">

<%- if atom.settings[:display_as] == "checkbox" -%>

	<%= check_box_tag(
		"atoms[atom_#{atom.id}][content]",
		"1",
		atom.atom.content == "1",
		:id => "atoms_#{atom.id}_content",
		:onclick => "if (this.checked) {var e = $('atoms_atom_#{atom.id}_hidden'); if(e){e.remove();}} else {var e = new Element('input', {type: 'hidden', value: 0, name: 'atoms[atom_#{atom.id}][content]', id: 'atoms_atom_#{atom.id}_hidden'}); Element.insert(this, {after: e});}"
	) %>
	<label for="atoms_<%= atom.id %>_content" style="display: inline">
		<%= t("atom_names.#{atom.name}") %>
	</label>

<%- elsif atom.settings[:display_as] == "select" -%>

	<label><%= t("atom_names.#{atom.name}") %></label>
	<%= select_tag(
		"atoms[atom_#{atom.id}][content]",
		options_for_select(options[:select_values], atom.atom.content),
		:id => "atoms_#{atom.id}_content",
		:class => options[:css_class]
	) %>

<%- else -%>

	<label>
		<%= t("atom_names.#{atom.name}") %>
		<%= delete_with_confirmation_link(
			wa_icon('delete-small'),
			_('Do you really want to delete this atom?'),
			atom_path(atom),
			:class => 'wa_icon_button small',
			:title => _('Remove this atom')
		) if atom.settings[:deletable] %>
	</label>
	<%= text_field_tag(
		"atoms[atom_#{atom.id}][content]",
		atom.atom.content,
		:class => "thin_border #{atom.settings[:linkable] ? 'text_with_icon' : 'text_long'}",
		:id => "atoms_#{atom.id}_content"
	) %>
	<%- if atom.settings[:linkable] -%>
	<span id="atom_<%= atom.id %>_link_and_title" style="display: none">
		<%= hidden_field_tag "atoms[atom_#{atom.id}][link]", atom.atom.link, :id => "atom_#{atom.id}_link" %>
		<%= hidden_field_tag "atoms[atom_#{atom.id}][title]", atom.atom.title, :id => "atom_#{atom.id}_link_title" %>
		<%= hidden_field_tag "atoms[atom_#{atom.id}][link_class_name]", atom.atom.link_class_name, :id => "atom_#{atom.id}_link_class_name" %>
		<%= hidden_field_tag "atoms[atom_#{atom.id}][open_link_in_new_window]", atom.atom.open_link_in_new_window ? "1" : "0", :id => "atom_#{atom.id}_link_target" %>
	</span>
	<a
		href="#"
		onclick="wa_link_window(this, 420); return false;"
		title="<%= _('place_link') %>"
		class="wa_icon_button"
		name="atom_text_<%= atom.id %>"
	><span class="icon link"></span></a>
	<%- end -%>

<%- end -%>

</div>
