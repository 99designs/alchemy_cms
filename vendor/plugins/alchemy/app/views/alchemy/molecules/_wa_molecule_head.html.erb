<div class="molecule_head">
  <div class="molecule_handle">
		<%= image_tag("molecules/molecule_pic.gif", :plugin => "alchemy", :title => "#{molecule.name}", :class => "molecule_image", :alt => "") -%>
		<%= image_tag("molecules/molecule_#{molecule.public? ? 'public' : 'draft'}.gif", :plugin => 'alchemy', :class => "molecule_status", :alt => "") %>
  </div>
	<span class="molecule_heading">
	  <%= content_tag("span", molecule.display_name, :class => "preview_text_molecule_name") %>
	  <%- if !molecule.preview_text.blank? -%>
	  	&nbsp;<%= content_tag("span", molecule.preview_text, :class => "preview_text_quote") %>
	  <%- end -%>
	</span>
	<span class="ajax_folder">
		<%= image_tag(
			"ajax_loader.gif",
			:plugin => "alchemy", 
			:style => "display: none",
			:id => "molecule_#{molecule.id}_folder_spinner",
			:class => "molecule_folder_spinner"
		) %>
		<%= link_to_remote(
			"",
			:url => {
				:controller => "molecules",
				:action => "toggle_fold",
				:id => molecule.id,
				:page_id => @page.id
			},
			:loading => %(
				$('molecule_#{molecule.id}_folder').hide();
				$('molecule_#{molecule.id}_folder_spinner').show();
			),
			:html => {
				:class => (molecule.folded? ? 'show_options' : 'hide_options'),
				:title => (molecule.folded? ? _('show_element_content') : _('hide_element_content')),
				:id => "molecule_#{molecule.id}_folder"
			}
		) %>
	</span>
</div>