<div class="wa_delete_and_save_buttons">
	<span class="molecule_tools">
		<%= delete_with_confirmation_link(
			"",
			_("confirm_to_delete_element"),
			molecule_path(molecule),
			{
				:class => "delete_molecule_button",
				:title => _("delete_element")
			}
		) -%>
		<%= link_to_remote(
			"",
			:url => {
				:controller => "molecules",
				:action => "copy_to_clipboard",
				:id => molecule.id,
				:method => "move"
			},
			:html => {
				:class => "molecule_move_button",
				:title => _("cut_element")
			}
		) %>
		<%= link_to_remote(
			"",
			:url => {
				:controller => "molecules",
				:action => "copy_to_clipboard",
				:id => molecule.id
			},
			:html => {
				:class => "molecule_copy_button",
				:title => _("copy_element")
			}
		) %>
	</span>
	<span class="molecule_public">
		<%= check_box_tag "public", "1", molecule.public?, :id => "molecule_#{molecule.id}_public" -%>
		<%= label_tag "molecule_#{molecule.id}_public", _("visible") -%>
	</span>
	<div id="molecule_<%= molecule.id %>_spinner" class="molecule_spinner" style="display:none">
		<span class="spinner_wait_text"><%= _("saving") -%></span>
		<%= image_tag('ajax_loader.gif', :plugin => "alchemy") %>
	</div>
	<span class="wa_save" id="molecule_<%= molecule.id %>_save">
		<%= submit_tag( _('save'), :class => 'button', :name => nil) %>
	</span>
</div>
