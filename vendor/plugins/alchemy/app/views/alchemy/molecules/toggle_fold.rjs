if @error
  page.replace("molecule_#{@molecule.id}_folder_spinner", "<span class='error_icon' title='#{@error}'>!</span>")
else
  page.replace(
    "dragable_#{@molecule.id}",
    :partial => "molecule",
    :object => @molecule,
    :locals => {:open_molecule_selector => false}
  )
  Alchemy::Configuration.sortable_molecules(page)
  page << "setFrameSize()"
  page << "TinymceHammer.init()"
end