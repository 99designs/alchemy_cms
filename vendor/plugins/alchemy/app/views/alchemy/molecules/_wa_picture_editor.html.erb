<div class="picture_gallery_images" id="molecule_<%= molecule.id %>_atoms">
	<%- for atom in picture_atoms do -%>
		<%= render_atom_editor(atom, {
			:dragable => picture_atoms.size > 1
		}.merge(options)) %>
	<%- end -%>
	<%- if options[:maximum_amount_of_images].blank? || picture_atoms.length < options[:maximum_amount_of_images].to_i -%>
		<%= render(
			:partial => 'molecules/add_atom',
			:locals => {
				:molecule => molecule,
				:atom_type => "Atoms::Picture",
				:link_text => _("add_image_to_molecule"),
				:options => options
			}
		) %>
	<%- end -%>
</div>
<%- if picture_atoms.size > 1 -%>
	<%= picture_editor_sortable(molecule.id) %>
<%- end -%>
