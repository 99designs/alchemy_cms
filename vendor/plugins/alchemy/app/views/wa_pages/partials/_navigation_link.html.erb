<%- # Important for funky navigation pagination
page = {:urlname => navigation_link.urlname}
(navigation_link.language_level + 1).times do |level|
	page["navigation_level_#{level}_page"] = params["navigation_level_#{level}_page"]
end
 -%>
<%= link_to(
		h(navigation_link.name),
		page.merge({ :controller => 'wa_pages', :action => 'show', :lang => (multi_language? ? session[:language] : nil)}),
		{
			:class => (page_active?(navigation_link) ? 'active' : nil),
			:title => (options[:show_title] == true ? navigation_link.title : nil)
		}
	)
%>
