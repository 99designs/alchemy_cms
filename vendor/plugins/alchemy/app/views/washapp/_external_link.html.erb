<div id="wa_sitemap_external_links" style="display: none" class="wa_overlay_tab_body">
	<h2>
		<%= _("enter_external_link") %>
	</h2>
	<table class="window_form">
		<tr>
			<td class="label medium">
				<%= wa_select_tag(
					'url_protocol',
					[
						['http://', 'http://'],
						['mailto:', 'mailto:'],
						['ftp://', 'ftp://'],
						['https://', 'https://'],
						['ftps://', 'ftps://']
					],
					"",
					:style => 'width: 90px'
				) %>
			</td>
			<td class="input">
				<%= text_field_tag 'external_url', {}, :class => "thin_border auto_resize" %>
			</td>
		</tr>
		<tr>
			<td class="label">
				<label for="extern_link_title" class="medium"><%= _("link_title") %></label>
			</td>
			<td class="input"><%= text_field_tag "extern_link_title", {}, :class => 'thin_border auto_resize' %></td>
		</tr>
		<tr>
			<td class="checkbox">
				<%= check_box_tag 'link_target' %>
			</td>
			<td>
				<label for="link_target" class="very_long"><%= _("target_blank") %></label>
			</td>
		</tr>
	</table>
	<p>
		<%= link_to_function(
		  _('apply'),
	    "waCreateLink('external', $('url_protocol').value + $('external_url').value, $('extern_link_title').value, $('link_target').checked); wa_overlay.close()",
		  :class => 'button'
		) %>
	</p>
</div>
