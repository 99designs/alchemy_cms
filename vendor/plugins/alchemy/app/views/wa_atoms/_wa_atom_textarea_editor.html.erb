<div class="<%= content.essence_type.tableize %>">
	<table border="0" cellspacing="0" cellpadding="0" class="content_editor_table">
		<tr>
			<td class="content_editor_essence_type">Typ:</td>
			<td class="content_editor_atom_name">Name:</td>
			<td>validieren?</td>
		</tr>
		<tr>
			<td><%= content.essence_type.gsub(/Content/, "") %></td>
			<td>
				<%= text_field(
					"atom",
					"name",
					:value => content.atom.name,
					:name => "atoms[atom_#{content.id}][name]",
					:id => "atom_#{content.id}_name",
					:class => "thin_border"
				) %>
			</td>
			<td style="text-align:center">
				<%= check_box(
					"atom",
					"validate",
					:name => "atoms[atom_#{content.id}][validate]",
					:id => "atom_#{content.id}_validate",
					:checked => (content.atom.validate? ? "checked" : nil)
				) %>
			</td>
		</tr>
	</table>
</div>
