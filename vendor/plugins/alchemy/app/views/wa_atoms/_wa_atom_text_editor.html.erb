<div class="content_editor" id="<%= atom_dom_id(content) %>">

<%- if content.settings[:display_as] == "checkbox" -%>

	<%= check_box_tag(
		"atoms[atom_#{content.id}][content]",
		"1",
		content.atom.content == "1",
		:id => "atoms_#{content.id}_content",
		:onclick => "if (this.checked) {var e = $('atoms_atom_#{content.id}_hidden'); if(e){e.remove();}} else {var e = new Element('input', {type: 'hidden', value: 0, name: 'atoms[atom_#{content.id}][content]', id: 'atoms_atom_#{content.id}_hidden'}); Element.insert(this, {after: e});}"
	) %>
	<label for="atoms_<%= content.id %>_content" style="display: inline">
		<%= t("atom_names.#{content.name}") %>
	</label>

<%- elsif content.settings[:display_as] == "select" -%>

	<label><%= t("atom_names.#{content.name}") %></label>
	<%= select_tag(
		"atoms[atom_#{content.id}][content]",
		options_for_select(options[:select_values], content.atom.content),
		:id => "atoms_#{content.id}_content",
		:class => options[:css_class]
	) %>

<%- else -%>

	<label>
		<%= t("atom_names.#{content.name}") %>
		<%= delete_with_confirmation_link(
			wa_icon('delete-small'),
			_('Do you really want to delete this atom?'),
			content_path(content),
			:class => 'icon_button small',
			:title => _('Remove this atom')
		) if content.settings[:deletable] %>
	</label>
	<%= text_field_tag(
		"atoms[atom_#{content.id}][content]",
		content.atom.content,
		:class => "thin_border #{content.settings[:linkable] ? 'text_with_icon' : 'text_long'}",
		:id => "atoms_#{content.id}_content"
	) %>
	<%- if content.settings[:linkable] -%>
	<span id="content_<%= content.id %>_link_and_title" style="display: none">
		<%= hidden_field_tag "atoms[atom_#{content.id}][link]", content.atom.link, :id => "atom_#{content.id}_link" %>
		<%= hidden_field_tag "atoms[atom_#{content.id}][title]", content.atom.title, :id => "atom_#{content.id}_link_title" %>
		<%= hidden_field_tag "atoms[atom_#{content.id}][link_class_name]", content.atom.link_class_name, :id => "atom_#{content.id}_link_class_name" %>
		<%= hidden_field_tag "atoms[atom_#{content.id}][open_link_in_new_window]", content.atom.open_link_in_new_window ? "1" : "0", :id => "atom_#{content.id}_link_target" %>
	</span>
	<a
		href="#"
		onclick="wa_link_window(this, 420); return false;"
		title="<%= _('place_link') %>"
		class="icon_button"
		name="content_text_<%= content.id %>"
	><span class="icon link"></span></a>
	<%- end -%>

<%- end -%>

</div>
