<div class="<%= content.atom_type.tableize %>">
	<table border="0" cellspacing="0" cellpadding="0" class="content_editor_table">
		<tr>
			<td class="content_editor_atom_type">Typ:</td>
			<td>Aktion:</td>
		</tr>
		<tr>
			<td><%= content.atom_type.gsub(/Content/, "") %></td>
			<td>
				<%= text_field(
					"atom",
					"name",
					:value => content.atom.action,
					:name => "atoms[atom_#{content.id}][action]",
					:id => "atom_#{content.id}_action",
					:class => "thin_border"
				) %>
			</td>
		</tr>
	</table>
</div>
