<div class="<%= content.atom_type.tableize %>">
	<table border="0" cellspacing="0" cellpadding="0" class="content_editor_table">
		<tr>
			<td class="content_editor_atom_type">Typ:</td>
			<td class="content_editor_atom_name">Label:</td>
			<td>Form schlie√üen?</td>
		</tr>
		<tr>
			<td><%= content.atom_type.gsub(/Content/, "") %></td>
			<td>
				<%= text_field(
					"atom",
					"label",
					:value => content.atom.label,
					:name => "atoms[atom_#{content.id}][label]",
					:id => "atom_#{content.id}_label",
					:class => "thin_border"
				) %>
			</td>
			<td style="text-align:center">
				<%= check_box(
					"atom",
					"close_form",
					:name => "atoms[atom_#{content.id}][close_form]",
					:id => "atom_#{content.id}_close_form",
					:checked => (content.atom.close_form? ? "checked" : nil)
				) %>
			</td>
		</tr>
	</table>
</div>
