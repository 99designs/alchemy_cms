<div id="picture_<%= content.id %>" class="<%= 'dragable_picture' if options[:dragable] %>">
	<%- if content.atom.image.nil? -%>
	<%= render :partial => "elements/assign_picture_atom", :locals => {:content => content, :options => options} %>
	<%- else -%>
	<div class="picture_detail">
		<div class="picture_handle" title="<%= _('drag_to_sort') if options[:dragable] %>"></div>
		<div class="picture_atom_spinner">
			<%= image_tag("ajax_loader.gif", :plugin => "alchemy", :alt => '') %>
		</div>
		<div class="picture_image" style="display: none;">
			<%= image_tag(
				thumbnail_url(:id => content.atom.image, :size => "111x93"),
				:alt => content.atom.image.name,
				:class => 'img_paddingtop',
				:title => _("image_name") + ": #{content.atom.image.name}",
				:onload => %(
					this.up().previous().hide();
					this.up().appear({duration: 0.6});
				)
			) %>
			<%= hidden_field_tag "atoms[atom_#{content.id}][image_id]", content.atom.image.id %>
		</div>
		<div class="edit_images_bottom">
			<%= render(
				:partial => 'contents/partials/wa_picture_tools',
				:locals => {
					:content => content,
					:options => options
				}
			) %>
		</div>
	</div>
	<%- end -%>
	<%= hidden_field_tag "atoms[atom_#{content.id}][link]", content.atom.link, :id => "atom_#{content.id}_link" %>
	<%= hidden_field_tag "atoms[atom_#{content.id}][link_title]", content.atom.link_title, :id => "atom_#{content.id}_link_title" %>
	<%= hidden_field_tag "atoms[atom_#{content.id}][link_class_name]", content.atom.link_class_name, :id => "atom_#{content.id}_link_class_name" %>
	<%= hidden_field_tag "atoms[atom_#{content.id}][open_link_in_new_window]", content.atom.open_link_in_new_window ? '1' : '0', :id => "atom_#{content.id}_link_target" %>
	<%= hidden_field_tag "atoms[atom_#{content.id}][image_size]", content.atom.image_size, :id => "atom_#{content.id}_image_size" %>
</div>
