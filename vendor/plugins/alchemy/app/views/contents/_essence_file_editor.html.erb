<div class="file" id="file_<%= content.id %>">
	<div class="file_icon">
	<%- if content.essence.file.nil? -%>
		<%= link_to_overlay_window("",
			archive_overlay_files_path(
				:content_id => content.id,
				:only => options[:file_assign_show_only],
				:except => options[:file_assign_do_not_show],
				:options => options
			),
			{
				:title => _('assign_file'),
				:size => '520x400',
				:resizable => 'true'
			},
			:class => 'assign_file',
			:title => _('assign_file')
		) %>
	<%- else -%>
		<%= render_file_icon(content.essence.file) %>
	<%- end -%>
	</div>
	<div class="file_name">
		<%= content.essence.file.name rescue "<span style='font-style:italic'> <- " + _('assign_file_from_archive') + "</span>" %>
	</div>
	<%- unless content.essence.file.nil? -%>
	<div class="content_file_tools">
		<%= link_to_overlay_window("",
			url_for(
				:controller => 'content_files',
				:action => 'edit',
				:id => content
			),
			{
				:title => _('edit_file_properties'),
				:size => '365x150'
			},
			:class => 'edit_file',
			:title => _('edit_file_properties')
		) %>
		<%= link_to_overlay_window("",
			archive_overlay_files_path(
				:content_id => content.id,
				:only => options[:file_assign_show_only],
				:except => options[:file_assign_do_not_show],
				:options => options
			),
			{
				:title => _('assign_file'),
				:size => '520x400',
				:resizable => 'true'
			},
			:class => 'assign_file',
			:title => _('assign_file')
		) %>
	</div>
	<%- end -%>
</div>
