<% remote_form_for @content, :html => {:class => 'with_padding'} do |f| %>
	<%= f.error_messages %>
	<%= f.hidden_field :element_id %>
	<table>
		<tr>
			<td>
				<%= f.wa_select 'name', @atoms.map{ |a| [t("content_names.#{a['name']}"), a['name']] }, :style => 'width: 200px' %>
				<%= hidden_field_tag('options', @options) %>
			</td>
			<td>
				&nbsp;<%= f.submit _('save'), :class => 'button' %>
			</td>
		</tr>
	</table>
<% end %>
