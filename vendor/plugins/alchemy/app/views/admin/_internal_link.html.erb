<div id="wa_sitemap_for_links" class="wa_overlay_tab_body">
	<h2>
		<%= _("internal_link_headline") %>
	</h2>
	<table class="window_form">
		<tr>
			<td colspan="2">
		    <div id="page_selector_scroll_container">
		      <div id="scrollbar_track">
		        <div id="scrollbar_handle"></div>
		      </div>
		      <div id="page_selector_container">
		        <ul id="wa_sitemap">
		          <%= render :partial => 'wa_page_for_links', :object => @wa_page_root, :locals => {:area_name => @area_name} %>
		        </ul>
		      </div>
		    </div>
			</td>
		</tr>
		<tr>
			<td class="label">
				<label for="internal_link_title" class="medium">Linktitel:</label>
			</td>
			<td class="input">
				<%= text_field_tag "internal_link_title", {}, :class => 'thin_border auto_resize' %>
			</td>
		</tr>
		<tr>
			<td class="checkbox">
        <%= check_box_tag 'internal_link_target' %>
			</td>
			<td>
        <label for="internal_link_target" class="very_long"><%= _("target_blank") %></label>
			</td>
		</tr>
	</table>
	<p>
    <%= hidden_field_tag( "internal_urlname" ) %>
    <%= hidden_field_tag( "page_anchor" ) %>
    <%= link_to_function(
      _("apply"),
      "waCreateLink('internal', $('internal_urlname').value + $('page_anchor').value, $('internal_link_title').value, $('internal_link_target').checked); wa_overlay.close()",
      :class => 'button'
    ) %>
	</p>
</div>
<%- javascript_tag do -%>
  wa_page_select_scrollbar = new Control.ScrollBar('page_selector_container','scrollbar_track');
<%- end -%>