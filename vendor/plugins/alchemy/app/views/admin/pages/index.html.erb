<%- alchemy_assets_set(:sitemap) -%>

<%- content_for :toolbar do -%>
<div id="toolbar">
	<div id="toolbar_buttons">
		<%= render :partial => 'language_selector' if configuration(:languages).size > 1 %>
	</div>
</div>
<%- end -%>

<h2 id="sitemap_heading">
	<span class="page_name"><%= _('Name') %></span>
	<span class="page_infos"><%= _('Status') %></span>
</h2>

<%= render :partial => 'sitemap' %>

<p class="footnote">
	<%= _('Explain|Sitemap|Dragndrop sorting') %>
</p>

<%- content_for :javascripts do -%>
<script type="text/javascript" charset="utf-8">
// <![CDATA[
	TooltipManager.init(
		"tooltip",
		"",
		{
			showEffect: Element.show,
			hideEffect: Element.hide,
			className: "alchemy_tooltip",
			delayOut: "0",
			closable: false,
			draggable: false,
			resizable: false
		}
	);
// ]]>
</script>
<%- end -%>
