<%- alchemy_assets_set(:sitemap) -%>
<%- content_for :toolbar do -%>
<div id="toolbar">
	<div id="toolbar_buttons">
		<%= render :partial => 'language_selector' if configuration(:languages).size > 1 %>
	</div>
</div>
<%- end -%>
<ul id="sitemap" class="list">
	<li class="legend">
		<span class="right">
			<span class="page_infos">
				<%= _('Infos') %>
			</span>
		</span>
		<span class="page_name">
			<%= _('Name') %>
		</span>
	</li>
	<%= render :partial => 'page', :object => @page_root %>
</ul>
<div id="log"></div>
<%- content_for :javascripts do -%>
<script type="text/javascript" charset="utf-8">
// <![CDATA[
	TooltipManager.init(
		"tooltip",
		"",
		{
			showEffect: Element.show,
			hideEffect: Element.hide,
			className: "alchemy_tooltip",
			delayOut: "0",
			closable: false,
			draggable: false,
			resizable: false
		}
	);
	var tree = new SortableTree(
		$$('#sitemap .draggable')[0],
		{
			onDrop: function(drag, drop, event) {
				new Ajax.Request('/admin/pages/sort', {postBody: drag.to_params()});
			}
		}
	);
	tree.setSortable();
// ]]>
</script>
<%- end -%>
