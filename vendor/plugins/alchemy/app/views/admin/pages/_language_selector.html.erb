<div class="button_with_label">
	<%= alchemy_selectbox_tag(
		'language',
		configuration(:languages).collect { |l| [
			l[:language],
			l[:language_code]
		] },
		session[:language],
		:onchange => %(
			new Ajax.Request('/admin/pages/switch_language', {
				asynchronous: true,
				evalScripts: true,
				parameters: {language: value}
			});
		)
	) %>
	<label><%= _("language") %></label>
</div>
