<div class="picture_gallery_images" id="element_<%= element.id %>_contents">
	<%- for picture_content in picture_contents do -%>
		<%= render_content_editor(picture_content, {
			:dragable => picture_contents.size > 1
		}.merge(options)) %>
	<%- end -%>
	<%- if options[:maximum_amount_of_images].blank? || picture_contents.length < options[:maximum_amount_of_images].to_i -%>
		<%= render(
			:partial => 'elements/add_content',
			:locals => {
				:element => element,
				:essence_type => "EssencePicture",
				:link_text => _("add_image_to_element"),
				:options => options
			}
		) %>
	<%- end -%>
</div>
<%- if picture_contents.size > 1 -%>
	<%= picture_editor_sortable(element.id) %>
<%- end -%>
