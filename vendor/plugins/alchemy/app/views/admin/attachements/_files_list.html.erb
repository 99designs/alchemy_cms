<%- if @attachements.blank? && params[:query].nil? -%>
	<p class="padding_left_right" id="no_files_notice">
		<%= _("no_files_in_archive") %>
	</p>
<%- elsif @attachements.blank? -%>
	<p class="padding_left_right">
		<%= _("no_search_results") %>
	</p>
<%- end -%>
<%= render :partial => 'admin/partials/pagination_links', :locals => {:items => @attachements} %>
<table id="all_files" class="list">
	<%- unless @attachements.blank? -%>
	<tr>
		<th class="icon"></th>
		<th class="name"><%= Attachement.human_attribute_name('name') %></th>
		<th class="file_name"><%= Attachement.human_attribute_name('filename') %></th>
		<th class="file_type"><%= Attachement.human_attribute_name('content_type') %></th>
		<th class="file_size"><%= Attachement.human_attribute_name('size') %></th>
		<th class="date"><%= Attachement.human_attribute_name('created_at') %></th>
		<th class="tools"></th>
	</tr>
	<%- end -%>
	<%= render(:partial => @attachements) %>
</table>