<%- wa_assets_set('default') -%>

<div id="explanation">
	<%= flash[:explain] %>	
</div>

<div id="wa_user_signup">
	<% form_for @wa_user, :url => {:action => 'signup'} do |f| %>
		<%= f.error_messages %>
		<table border="0" cellspacing="4" cellpadding="0">
			<tr>
				<td height="25px"><%= f.label 'gender', WaUser.human_attribute_name(:gender) %></td>
				<td><%= f.wa_select 'gender', WaUser.genders_for_select, :class => 'medium_long' -%></td>
			</tr>
			<tr>
				<td height="25px"><%= f.label 'firstname', WaUser.human_attribute_name(:firstname) %></td>
				<td><%= f.text_field 'firstname', :class => 'thin_border medium_long' -%></td>
			</tr>
			<tr>
				<td height="25px"><%= f.label 'lastname', WaUser.human_attribute_name(:lastname) %></td>
				<td><%= f.text_field 'lastname', :class => 'thin_border medium_long' -%></td>
			</tr>
			<tr>
				<td height="25px"><%= f.label 'login', WaUser.human_attribute_name(:login) %><small>*</small></td>
				<td><%= f.text_field 'login', :class => 'thin_border medium_long' -%></td>
			</tr>
			<tr>
				<td height="25px"><%= f.label 'email', WaUser.human_attribute_name(:email) %><small>*</small></td>
				<td><%= f.text_field 'email', :class => 'thin_border medium_long' -%></td>
			</tr>
			<tr>
				<td height="25px"><%= f.label 'language', WaUser.human_attribute_name(:language) %><small>*</small></td>
				<td><%= f.wa_select 'language', translations_for_select, :class => 'medium_long' -%></td>
			</tr>
			<tr>
				<td height="25px"><%= f.label 'password', WaUser.human_attribute_name(:password) %><small>*</small></td>
				<td><%= f.password_field 'password', :class => 'thin_border medium_long' -%></td>
			</tr>
			<tr>
				<td height="25px"><%= f.label 'password_confirmation', WaUser.human_attribute_name(:password_confirmation) %><small>*</small></td>
				<td><%= f.password_field 'password_confirmation', :class => 'thin_border medium_long' -%></td>
			</tr>
			<tr>
				<td height="25px" colspan="2" align="right">
					<%= f.submit _('save'), :class => 'button' %>
				</td>
			</tr>
		</table>
		<p class="foot_note">
			<small>*</small><%= _("mandatory fields") %>
		</p>
	<% end %>
</div>
