<div class="image_assign_filter_and_image_sizing">
	<span class="image_sizing">
		<label><%= _("thumbnail_size") %>:</label>
		<%= link_to_remote(
			"",
			:url => {
				:action => "archive_overlay",
				:size => "small",
				:content_id => @content,
				:element_id => @element,
				:swap => @swap,
				:page => params[:page],
				:remote => true,
				:options => @options
			},
			:html => {
				:title => _("small_thumbnails"),
				:class => "image_size_small"
			}
		) %>
		<%= link_to_remote(
			"",
			:url => {
				:action => "archive_overlay",
				:size => "medium",
				:content_id => @content,
				:element_id => @element,
				:swap => @swap,
				:page => params[:page],
				:remote => true,
				:options => @options
			},
			:html => {
				:title => _("medium_thumbnails"),
				:class => "image_size_medium"
			}
		) %>
		<%= link_to_remote(
			"",
			:url => {
				:action => "archive_overlay",
				:size => "large",
				:content_id => @content,
				:element_id => @element,
				:swap => @swap,
				:page => params[:page],
				:remote => true,
				:options => @options
			},
			:html => {
				:title => _("big_thumbnails"),
				:class => "image_size_large"
			}
		) %>
	</span>
	<%= link_to_overlay_window(
		render_icon('upload'),
		url_for(
			:controller => 'admin/images',
			:action => 'new',
			:while_assigning => true,
			:element_id => @element.blank? ? nil : @element.id,
			:content_id => @content.blank? ? nil : @content.id,
			:swap => @swap,
			:page => params[:page],
			:per_page => params[:per_page],
			:size => @size,
			:options => @options
		),
		{
			:size => "355x320",
			:title => _('upload_image')
		},
		{
			:class => 'icon_button',
			:title => _('upload_image')
		}
	) %>
	<%= render(
		:partial => 'admin/partials/remote_search_form',
		:locals => {
			:with => "'remote=true'+'&element_id='+$('element_id').value+'&content_id='+$('content_id').value+'&swap='+$('swap').value+'&options='+$('options').value",
			:action => 'archive_overlay'
		}
	) %>
</div>
