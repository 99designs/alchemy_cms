<%- if @images.blank? && params[:query].nil? -%>
	<p class="padding_left_right">
		<%= _("no_images_in_archive") %>
	</p>
<%- elsif @images.blank? -%>
	<p class="padding_left_right">
		<%= _("no_search_results") %>
	</p>
<%- else  -%>
	<%= render :partial => 'admin/partials/pagination_links', :locals => {:items => @images} %>
	<div id="images">
		<%= render(:partial => 'image', :collection => @images) %>
	</div>
<%- end -%>