<%- form_tag("/pages/copy_language", :class => "with_padding") do -%>
	<h1><%= _("language_does_not_exist") %></h1>
	<p><%= _("want_to_make_copy_of_existing_language") %></p>
	<table>
		<tr>
			<td class="input">
				<%= wa_select_tag("languages[old_lang]", @languages, :class => "medium_long", :style => "float:left") %>
				<%= hidden_field_tag("languages[new_lang]", @language[1]) %>
			</td>
			<td class="">
				&nbsp;<%= submit_tag _("copy"), :class => 'button' %>
			</td>
		</tr>
	</table>
	<p><br /><%= _("want_to_create_new_language") %></p>
	<table>
		<tr>
			<td class="submit">
				<%= link_to(
					_("%{language}_as_new_language") % {:language => @language[0]},
					{
						:controller => "pages",
						:action => "switch_language",
						:lang => @language[1]
					},
					:class => 'button',
					:style => "float:right"
				) %>
			</td>
		</tr>
	</table>
<%- end -%>
