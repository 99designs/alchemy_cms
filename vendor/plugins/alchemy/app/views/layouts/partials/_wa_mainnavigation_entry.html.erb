<%- permitted_to?(wa_mainnavigation_entry["action"].to_sym, wa_mainnavigation_entry["controller"].to_sym) do -%>

<% link_to(
	url_for(
		:controller => wa_mainnavigation_entry["controller"],
		:action => wa_mainnavigation_entry["action"]
	),
	:class => "wa_top_navi_entry#{admin_mainnavi_active?(wa_mainnavigation_entry) ? ' active' : nil }",
	:onclick => 'pleaseWaitOverlay();'
) do %>
	<span class="tab-left"></span>
	<span class="tab-center">
		<%= image_tag wa_mainnavigation_entry["image"] %>
		<%- unless wa_mainnavigation_entry["name"].blank? -%>
		<span><%= _(wa_mainnavigation_entry["name"]) -%></span>
		<%- end -%>
	</span>
	<span class="tab-right"></span>
<% end %>

<%- end -%>
