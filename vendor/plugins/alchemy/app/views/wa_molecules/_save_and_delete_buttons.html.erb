<div class="wa_delete_and_save_buttons">
	<span class="wa_molecule_tools">
		<%= delete_with_confirmation_link(
			"",
			_("confirm_to_delete_element"),
			wa_molecule_path(wa_molecule),
			{
				:class => "delete_molecule_button",
				:title => _("delete_element")
			}
		) -%>
		<%= link_to_remote(
			"",
			:url => {
				:controller => "wa_molecules",
				:action => "copy_to_clipboard",
				:id => wa_molecule.id,
				:method => "move"
			},
			:html => {
				:class => "wa_molecule_move_button",
				:title => _("cut_element")
			}
		) %>
		<%= link_to_remote(
			"",
			:url => {
				:controller => "wa_molecules",
				:action => "copy_to_clipboard",
				:id => wa_molecule.id
			},
			:html => {
				:class => "wa_molecule_copy_button",
				:title => _("copy_element")
			}
		) %>
	</span>
	<span class="wa_molecule_public">
		<%= check_box_tag "public", "1", wa_molecule.public?, :id => "molecule_#{wa_molecule.id}_public" -%>
		<%= label_tag "molecule_#{wa_molecule.id}_public", _("visible") -%>
	</span>
	<div id="wa_molecule_<%= wa_molecule.id %>_spinner" class="wa_molecule_spinner" style="display:none">
		<span class="spinner_wait_text"><%= _("saving") -%></span>
		<%= image_tag('ajax_loader.gif', :plugin => "alchemy") %>
	</div>
	<span class="wa_save" id="molecule_<%= wa_molecule.id %>_save">
		<%= submit_tag( _('save'), :class => 'button', :name => nil) %>
	</span>
</div>
