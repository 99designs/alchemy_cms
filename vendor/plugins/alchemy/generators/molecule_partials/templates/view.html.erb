<div class="<%= molecule_name %>" id="<%%= molecule_dom_id(molecule) %>">
<%- unless atoms.blank? -%>
	<%- atoms.each do |atom| -%>
		<%- unless atom["type"] == "Atoms::Picture" -%>
	<div class="<%= atom["name"] %>">
		<%%= render_atom_view_by_name(molecule, '<%= atom["name"] %>') %>
	</div>
		<%- else -%>
	<div class="<%= molecule_name %>_images">
		<%%- molecule.atoms.find_all_by_atom_type("Atoms::Picture").each do |atom| -%>
		<div class="<%= molecule_name %>_image">
			<%%= render_atom_view(atom, :image_size => "160x120") %>
		</div>
		<%%- end -%>
	</div>
		<%- end -%>
	<%- end -%>
<%- end -%>
</div>
