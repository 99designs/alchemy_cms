<div class="picture_tool_button">
	<%= delete_with_confirmation_link(
		"",
		_("confirm_to_delete_image"),
		url_for(
			:controller => 'wa_atom_pictures',
			:action => 'destroy',
			:id => wa_atom,
			:options => options
		),
		{
			:title => _("delete_image"),
			:class => "picture_delete"
		}
	) -%>
</div>
<div class="picture_tool_button">
	<%= link_to_wa_window("",
		url_for(
			:controller => 'wa_images',
			:action => 'archive_overlay',
			:wa_molecule_id => wa_atom.wa_molecule,
			:wa_atom_id => wa_atom,
			:swap => true,
			:options => options
		),
		{
			:title => _('swap_image'),
    		:size => '780x450',
    		:resizable => "true"
		},
		:title => _('swap_image'),
		:class => 'swap_picture'
	) %>
</div>
<div class="picture_tool_button">
	<%= link_to_function '', "wa_link_window(this, 420)", :class => (wa_atom.atom.link.blank? ? 'edit_link' : 'edit_link linked'), :title => _('link_image'), :name => "wa_atom_picture_#{wa_atom.id}", :id => "edit_link_#{wa_atom.id}" %>
</div>
<div class="picture_tool_button">
	<%= link_to_function(
		"",
		"$('atom_#{wa_atom.id}_link').value='';$('atom_#{wa_atom.id}_link_title').value='';$('atom_#{wa_atom.id}_link_class_name').value='';$('atom_#{wa_atom.id}_link_target').value='';$('edit_link_#{wa_atom.id}').removeClassName('linked')",
		:class => 'remove_link',
		:title => _('unlink')
	) %>
</div>
<div class="picture_tool_button">
	<%= link_to_wa_window("",
		edit_wa_atom_picture_path(
			:id => wa_atom.atom.id,
	    	:options => options
	    ),
	    {
			:title => _('edit_image_properties'),
	    	:size => (options[:caption_as_textarea] ? (options[:manual_image_size] ? '365x200' : '365x180') : (options[:manual_image_size] ? '365x160' : '365x150'))
		},
		:class => 'edit_picture',
		:title => _('edit_image_properties')
	) %>
</div>
