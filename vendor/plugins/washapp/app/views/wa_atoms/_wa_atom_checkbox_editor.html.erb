<div class="<%= wa_atom.atom_type.tableize %>">
	<table border="0" cellspacing="0" cellpadding="0" class="wa_atom_editor_table">
		<tr>
			<td class="wa_atom_editor_atom_type">Typ:</td>
			<td class="wa_atom_editor_atom_name">Name:</td>
			<td>validieren?</td>
		</tr>
		<tr>
			<td><%= wa_atom.atom_type.gsub(/WaAtom/, "") %></td>
			<td>
				<%= text_field(
					"atom",
					"name",
					:value => wa_atom.atom.name,
					:name => "atoms[atom_#{wa_atom.id}][name]",
					:id => "atom_#{wa_atom.id}_name",
					:class => "thin_border"
				) %>
			</td>
			<td style="text-align:center">
				<%= check_box(
					"atom",
					"validate",
					:name => "atoms[atom_#{wa_atom.id}][validate]",
					:id => "atom_#{wa_atom.id}_validate",
					:checked => (wa_atom.atom.validate? ? "checked" : nil)
				) %>
			</td>
		</tr>
	</table>
</div>
